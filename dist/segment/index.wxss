input,textarea{box-sizing:border-box}progress{border-radius:10rpx}.bs-segment-container{display:flex;border-radius:5px;overflow:hidden;border:solid 1px #108ee9}.bs-segment-container.bs-segment-warn{border:solid 1px red}.bs-segment{display:flex;justify-content:center;align-items:center;flex:1;-webkit-flex:1;height:20px;color:#108ee9;border-right:solid 1px #108ee9}.bs-segment.bs-segment-warn{border-right:solid 1px red;color:red;height:30px}.bs-segment:last-child{border-right:none}.bs-segment-select{transition:background .2s;background-color:#108ee9;opacity:1;color:#fff!important}.bs-segment-select.bs-segment-select-disabled{opacity:.5}.bs-segment-select.bs-segment-warn{background-color:red}